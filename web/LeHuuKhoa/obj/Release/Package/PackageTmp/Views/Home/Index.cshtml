@model IEnumerable<LeHuuKhoa.Core.Models.PostCategory>
@{
    ViewBag.Title = "Trang Chủ";
    ViewBag.MetaDescription = "Trang thầy khóa, Lê Hữu Khóa Blog, Giáo sư tiến sĩ Lê Hữu Khóa";
    ViewBag.MetaKeywords = "trang thầy khóa, lê hữu khóa, lê hữu khóa blog, tiến sĩ lê hữu khóa";
}
@section header
{
    @{Html.RenderAction("StartPageHeader", "Home");}
}
<section class="container">
    @foreach (var category in Model)
    {
        <div class="post">
            <div class="image-post">
                <a href="@Url.Action("Read","Category", new { id = category.Id })"><img class="img-responsive" data-src="@category.ImageUrl" width="300" height="200" alt="@category.Name"></a>
                <div class="post-title-overlay">
                    <a href="@Url.Action("Read","Category", new { id = category.Id })"> @category.Name </a>
                </div>
            </div>
        </div>
    }
</section>