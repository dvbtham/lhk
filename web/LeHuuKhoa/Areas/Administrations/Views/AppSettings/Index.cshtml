@using LeHuuKhoa.Core.ViewModels
@model AppSettingsViewModel
@{
    ViewBag.AdminTitle = "Cài đặt";
    Layout = "~/Areas/Administrations/Views/Shared/_Layout.cshtml";
}

@section breadcrumb
{
    <section class="content-header">
        <h1>
            @ViewBag.AdminTitle
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "PostCategory", new { area = "Administrations" })"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">@ViewBag.AdminTitle</li>
        </ol>
    </section>
}

<div class="box">
    <div class="box-body ">

        @using (Html.BeginForm("Update", "AppSettings", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Thông tin cài đặt</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @for (var i = 0; i < Model.AppSettings.Count; i++)
                {
                    <div class="form-group">
                        <label name="@Model.AppSettings[i].Key" class="control-label col-md-2">@Model.AppSettings[i].Key</label>
                        @Html.HiddenFor(x => x.AppSettings[i].Key)

                        @if (Model.AppSettings[i].Key == "FromEmailPassword")
                        {
                            <div class="col-md-10">
                                @Html.TextBoxFor(x => x.AppSettings[i].Value, new { @class = "form-control", type = "password" })
                            </div>
                        }
                        else
                        {
                            <div class="col-md-10">
                                @Html.TextBoxFor(x => x.AppSettings[i].Value, new { @class = "form-control" })
                            </div>
                        }
                    </div>
                }

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="box-footer"></div>
</div>
@section scripts
{
    <script>
        $("input[type='submit']").on("click", function () {
            $('#loading-bg-submit').removeClass('hidden');
        });

    </script>
}

