@using LeHuuKhoa.Core.Models
@model LeHuuKhoa.Core.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập hệ thống";
}

<section class="container single-post-container">
    <div class="left">
        <div class="breadcrumb">
            <ul>
                <li><a href="/">Trang chủ >></a> </li>
                <li> Đăng nhập</li>
            </ul>
        </div>
        <div class="post-list">
            <article class="single-post ">
                <div class="header-post">
                    <p class="time-post"><strong>Thông tin tài khoản</strong></p>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "contact" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { style="color: red" })
                        <fieldset>
                            @Html.TextBoxFor(m => m.Email, new { autofocus = "autofocus", tabindex = 1, placeholder = "Email hoặc Tên đăng nhập" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { style = "color: red" })
                        </fieldset>
                        <fieldset>
                            @Html.PasswordFor(m => m.Password, new { tabindex = 2, placeholder = "Mật khẩu" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { style = "color: red" })
                        </fieldset>
                        <fieldset>
                            <button name="submit" type="submit" id="contact-submit" data-submit="...Đang gửi">Đăng nhập</button>
                        </fieldset>
                    }
                </div>
            </article>
        </div>
    </div>
    <div class="right">
        <div class="search">
            <input type="text" placeholder="Nhập từ khóa..." name="search">
            <button type="submit">Tìm</button>
        </div>
        <div class="widget widget_categories">
            <h3 class="widget-title">Danh mục</h3>
            <ul>
                <li class="cat-item"><a href="#">Duyên luận</a></li>
                <li class="cat-item"><a href="#">Tình luận</a></li>
                <li class="cat-item"><a href="#">Vùng nhân luân</a></li>
                <li class="cat-item"><a href="#">Khoa học luận</a></li>
            </ul>
        </div>
        <!-- /.widget_categories -->
        <div class="widget widget_recent_entries">
            <h3 class="widget-title">Bài viết mới</h3>
            <ul>
                <li><a href="#">Paris guide launch event</a></li>
                <li><a href="#">The calibre of the art hints at the creative</a></li>
                <li><a href="#">Anglepoise Salone del Mobile</a></li>
                <li><a href="#">A limited edition Agnes Martin cover</a></li>
                <li><a href="#">Nakashima – woodworker</a></li>
            </ul>
        </div>
        <!-- /.widget_recent_entries -->
        <div class="widget widget_tag_cloud">
            <h3 class="widget-title">Tags</h3>
            <div class="tagcloud">
                <a href="#">Building</a>
                <a href="#">Cover</a>
                <a href="#">Decor</a>
                <a href="#">Interior</a>
            </div>
        </div>
        <!-- /.widget_tag_cloud -->
    </div>
</section>