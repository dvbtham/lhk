@using LeHuuKhoa.Core.Models
@model LeHuuKhoa.Core.ViewModels.PostCategoryClientViewModel

@{
    ViewBag.Title = Model.Name;
    ViewBag.MetaDescription = Model.Name;
    ViewBag.MetaKeywords = Model.Name.ToLower();
}

<div class="parallax">
    <div class="overlay">
        <div class="text-content">
           @Html.Raw(Model.Descriptions)
        </div>
    </div>
    <img data-src="@Model.BackgroundImage" alt="@Model.Name">
</div>
<div class="container">
    <div class="row box">
        <div class="col-md-9" id="left">
            <ol class="breadcrumb">
                <li><a href="/">Trang chủ</a></li>
                <li class="active">@Model.Name</li>
            </ol>
            @if (Model.Posts.Count > 0)
            {
                <p>Chủ mục có @Model.Posts.Count bài giảng</p>
                <ul>
                    @foreach (var item in Model.Posts)
                    {
                        <li>
                            @if (item.PostType == PostType.Pdf)
                            {
                                @Ajax.ActionLink(item.Title, "PdfPartialView",
                                    new { postId = item.Id },
                                    new AjaxOptions {UpdateTargetId = "container",  OnBegin = "onAjaxBegin", OnComplete = "onAjaxComplete" })
                            }
                            else if (item.PostType == PostType.Content)
                            {
                                @Ajax.ActionLink(item.Title, "ContentPartialView",
                                    new { postId = item.Id },
                                    new AjaxOptions { UpdateTargetId = "container", OnBegin = "onAjaxBegin", OnComplete = "onAjaxComplete" })
                            }
                            else if (item.PostType == PostType.PowerPoint)
                            {
                                @Ajax.ActionLink(item.Title, "SlideContentPartialView",
                                    new { postId = item.Id },
                                    new AjaxOptions { UpdateTargetId = "container", OnBegin = "onAjaxBegin", OnComplete = "onAjaxComplete" })
                            }
                        </li>
                    }
                </ul>

                <div id="container"></div>
                <div id="loading-container" class="hide">
                    <i class="fa fa-spin fa-spinner"></i> Loading...
                </div>
            }

        </div>
        @{Html.RenderAction("Categories", "Category");}
    </div>
</div>

@section scripts
{
    <script>
        function onAjaxBegin() {
            $("#loading-container").removeClass("hide");
        }
        function onAjaxComplete() {
            $("#loading-container").addClass("hide");
        }
        
    </script>
}
