@using LeHuuKhoa.Core.Models
@model LeHuuKhoa.Core.ViewModels.DownLoadViewModel
@{
    Layout = null;
}

@if (Model.Post.PostType == PostType.PowerPoint)
{
    if (!string.IsNullOrEmpty(Model.Post.FileDownLoadLink))
    {
        <a href="@Model.Post.FileDownLoadLink" target="_blank" style="padding-left: 20px"><i class="fa fa-download"></i>&nbsp; Download</a>
    }
}
else if (Model.Post.PostType == PostType.Content && Model.Post.FileDownLoad != null)
{
    <a href="@Url.Action("Download", "Category", new { fileId = Model.Post.FileDownLoad.Id })" style="padding-left: 20px"><i class="fa fa-download"></i>&nbsp; Download</a>
}
