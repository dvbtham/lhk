@model LeHuuKhoa.Core.ViewModels.SlideViewModel

@if (Model.ImagesPath.Count > 0)
{
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            @{
                var j = 0;
                foreach (var image in Model.ImagesPath)
                {
                    var itemClass = j++ == 0 ? "item active" : "item";
                    <div class="@itemClass">
                        <img src="@image" style="width: 100%">
                    </div>
                }
            }
        </div>
        <ol class="carousel-indicators">
            @for (var i = 0; i < Model.ImagesPath.Count; i++)
            {
                var itemClassTo = i == 0 ? "active" : "";
                <li data-target="#myCarousel" data-slide-to="@i" class="@itemClassTo"></li>
            }
        </ol>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

                }
